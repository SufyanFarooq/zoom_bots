{
  "name": "zoom-bots-local",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "launch": "node simpleBatchLauncher-fixed-logic.js",
    "optimized": "node simpleBatchLauncher-fixed-logic.js",
    "stop": "node stop-bots.js",
    "speed:50": "TOTAL_BOTS=50 MAX_CONCURRENT=15 DELAY_MS=3000 KEEP_ALIVE_MINUTES=30 node simpleBatchLauncher-fixed-logic.js",
    "ultra:100": "TOTAL_BOTS=100 MAX_CONCURRENT=20 DELAY_MS=2000 KEEP_ALIVE_MINUTES=30 node simpleBatchLauncher-fixed-logic.js",
    "docker:single": "./test-docker-single.sh",
    "docker:scale": "./docker-scale-test.sh",
    "orchestrator": "node orchestrator.js",
    "cost-optimizer": "node api/cost-optimizer.js",
    "test:single": "node test-single-bot.js",
    "test:local": "./scripts/local-test.sh",
    "test:progressive": "./scripts/progressive-test.sh",
    "setup:minikube": "./scripts/setup-minikube.sh",
    "deploy:multi-cloud": "./scripts/deploy-multi-cloud.sh",
    "scale": "./scripts/scale-bots.sh",
    "k8s:local": "docker-compose -f docker-compose.k8s.yml up",
    "k8s:scale": "docker-compose -f docker-compose.k8s.yml up --scale zoom-bot=${1:-3} -d",
    "build:ultra": "docker build -f Dockerfile.ultra-light -t zoom-bots:ultra-light .",
    "monitor": "kubectl port-forward svc/prometheus-grafana 3001:80 -n monitoring"
  },
  "dependencies": {
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "puppeteer-core": "^24.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
